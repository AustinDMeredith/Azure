<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.Secondary1Controller">

    <top>
        <Label text="Based Box" style="-fx-font-size: 22px; -fx-font-weight: bold;" 
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <WebView fx:id="svgPreview" prefHeight="400" prefWidth="700"/>
    </center>

    <bottom>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="Width:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="widthField" text="200" prefWidth="80" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Height:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="heightField" text="150" prefWidth="80" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="Depth:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="depthField" text="100" prefWidth="80" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Teeth Size:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <TextField fx:id="teethField" text="10" prefWidth="80" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
            </GridPane>

            <HBox spacing="20" alignment="CENTER">
                <Button text="Update Preview" onAction="#updatePreview"/>
                <Button text="Generate SVG File" onAction="#generateSVGFile"/>
                <Button text="Back to Main Menu" onAction="#switchToPrimary"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
