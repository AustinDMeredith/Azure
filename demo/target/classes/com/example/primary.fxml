<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.PrimaryController">
    <center>
        <VBox alignment="CENTER" spacing="30">
            <Label text="Select a Box Type" style="-fx-font-size: 26px;"/>
            <HBox spacing="40" alignment="CENTER">
                <Button text="Regular Box" onAction="#handleBox1Click" prefWidth="150" prefHeight="150"/>
                <Button text="Base Box" onAction="#handleBox2Click" prefWidth="150" prefHeight="150"/>
                <Button text="Die Box" onAction="#handleBox3Click" prefWidth="150" prefHeight="150"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>