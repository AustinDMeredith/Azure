<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.PrimaryController" style="-fx-background-color: #4470b8;">

    <top>
        <Label text="Azure Box Creations" style="-fx-font-size: 18px; 
        -fx-text-fill: white;" BorderPane.alignment="CENTER" translateY="20"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">

            <!-- VBox for "Choose Your Design" -->
            <VBox alignment="CENTER">
                <Label text="Choose Your Design" 
                       style="-fx-font-size: 45px;-fx-font-weight: bold; -fx-text-fill: white;"
                       translateY="0"/> <!-- You can adjust translateY individually -->
            </VBox>

            <!-- VBox for "Which box fits your needs?" -->
            <VBox alignment="CENTER">
                <Label text="Which box fits your needs?" 
                       style="-fx-font-size: 19px; -fx-font-weight: bold; -fx-text-fill: white;"
                       translateY="-30"/> <!-- Moves this label up 10px -->
            </VBox>

            <!-- HBox of boxes -->
            <HBox alignment="CENTER" spacing="60">
                <VBox alignment="CENTER" spacing="10"
                    style="-fx-border-color: black; -fx-border-width: 3px; -fx-border-radius: 0px; -fx-padding: 0px;
                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.3, 0, 5);">
                    <ImageView fx:id="regularBox" fitWidth="150" fitHeight="150" onMouseClicked="#handleRegularBoxClick" style="-fx-cursor: hand;">
                        <image>
                            <Image url="@images/regularBox.png"/>
                        </image>
                    </ImageView>
                    <Label text="Regular Box" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                </VBox>

                <VBox alignment="CENTER" spacing="10"
                    style="-fx-border-color: black; -fx-border-width: 3px; -fx-border-radius: 0px; -fx-padding: 0px;
                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.3, 0, 5);">
                    <ImageView fx:id="basedBox" fitWidth="150" fitHeight="150" onMouseClicked="#handleBasedBoxClick" style="-fx-cursor: hand;">
                        <image>
                            <Image url="@images/basedBox.png"/>
                        </image>
                    </ImageView>
                    <Label text="Based Box" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                </VBox>

                <VBox alignment="CENTER" spacing="10"
                    style="-fx-border-color: black; -fx-border-width: 3px; -fx-border-radius: 0px; -fx-padding: 0px;
                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.3, 0, 5);">
                    <ImageView fx:id="dieBox" fitWidth="150" fitHeight="150" onMouseClicked="#handleDieBoxClick" style="-fx-cursor: hand;">
                        <image>
                            <Image url="@images/dieBox.png"/>
                        </image>
                    </ImageView>
                    <Label text="Hinge Box" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                </VBox>
            </HBox>

        </VBox>
    </center>

</BorderPane>
