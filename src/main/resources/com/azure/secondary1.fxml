<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.geometry.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.azure.Secondary1Controller"
            style="-fx-background-color: #4470b8;"
            stylesheets="@styles.css"
            prefWidth="800" prefHeight="600">

    <center>
        <VBox fx:id="mainVBox" spacing="10" alignment="TOP_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox>
            <!-- Top controls: teeth + dimensions label + dimensions inputs -->
            <VBox fx:id="topControls" spacing="10">

                <!-- Teeth size -->
                <HBox fx:id="teethHBox" spacing="10" alignment="CENTER_LEFT">
                    <Label text="Teeth Size per mm" 
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;">
                        <effect>
                            <DropShadow radius="2" offsetX="2" offsetY="2" color="rgba(0,0,0,0.3)"/>
                        </effect>
                    </Label>
                    <TextField fx:id="teethField" text="8" prefWidth="60"
                               style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 1, 1);"/>
                </HBox>

                <!-- Dimensions label -->
                <Label fx:id="dimensionsLabel" text="Dimensions:" 
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;">
                    <effect>
                        <DropShadow radius="2" offsetX="2" offsetY="2" color="rgba(0,0,0,0.3)"/>
                    </effect>
                </Label>

                <!-- Dimensions inputs -->
                <HBox fx:id="dimensionsHBox" spacing="10" alignment="CENTER_LEFT">

                    <Label text="X (mm):" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                    <TextField fx:id="widthField" text="100" prefWidth="60"
                               style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 1, 1);"/>
                    <Label text="Y (mm):" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                    <TextField fx:id="heightField" text="100" prefWidth="60"
                               style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 1, 1);"/>
                    <Label text="Z (mm):" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                    <TextField fx:id="depthField" text="100" prefWidth="60"
                               style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 1, 1);"/>


                </HBox>                   <!-- for the drop down box -->
                    <Region HBox.hgrow="ALWAYS"/>
                    <!-- DROPDOWN -->
                    <HBox spacing="6" alignment="CENTER_LEFT" >
                        <Label text="Lid type:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>

                        <ComboBox fx:id="dimensionTypeCombo" prefWidth="150">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Regular Lid" />
                                    <String fx:value="Sliding Lid" />
                                    <String fx:value="Lifting Lid" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </HBox>
            </VBox>

            <VBox fx:id="advancedSettingVBox" alignment="TOP_LEFT">
                <padding>
                    <Insets left="20"/>
                </padding>
                <Label text="Advanced Settings" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;">
                    <effect>
                        <DropShadow radius="2" offsetX="2" offsetY="2" color="rgba(0,0,0,0.3)"/>
                    </effect>
                </Label>

                <HBox>
                <VBox> 
                  <padding>
                      <Insets left="40" top="15"/>
                    </padding>

                  <Label text="Tolerance Settings" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;">
                      <effect>
                          <DropShadow radius="2" offsetX="2" offsetY="2" color="rgba(0,0,0,0.3)"/>
                      </effect>
                  </Label>
                  
                  <HBox fx:id="GlobalTolereanceHBox" spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="15"/>
                    </padding>
                      <Label text="Global Tolerance:" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                      <ComboBox fx:id="globalTolCombo" prefWidth="150">
                          <items>
                              <FXCollections fx:factory="observableArrayList">
                                  <String fx:value="High" />
                                  <String fx:value="Medium" />
                                  <String fx:value="Low" />
                                  <String fx:value="Custom" />
                              </FXCollections>
                          </items>  
                      </ComboBox>
                      
                      <Label text="Lazer Burn-Off:" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                      <ComboBox fx:id="kerfCombo" prefWidth="150">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="High" />
                                    <String fx:value="Medium" />
                                    <String fx:value="Low" />
                                </FXCollections>
                            </items>
                      </ComboBox>
                  </HBox>

                  <HBox fx:id="FrontBackTolereanceHBox" spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="15"/>
                    </padding>
                      <Label text="Front Panel:" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                      <ComboBox fx:id="frontTolCombo" prefWidth="150">
                          <items>
                              <FXCollections fx:factory="observableArrayList">
                                  <String fx:value="High" />
                                  <String fx:value="Medium" />
                                  <String fx:value="Low" />
                              </FXCollections>
                          </items>
                      </ComboBox>
                      
                      <Label text="Back Panel:" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                      <ComboBox fx:id="backTolCombo" prefWidth="150">
                          <items>
                              <FXCollections fx:factory="observableArrayList">
                                  <String fx:value="High" />
                                  <String fx:value="Medium" />
                                  <String fx:value="Low" />
                              </FXCollections>
                          </items>
                      </ComboBox>
                  </HBox>
                  
                  <HBox fx:id="SideTolereanceHBox" spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="15"/>
                    </padding>
                      <Label text="Left Panel:" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                      <ComboBox fx:id="leftTolCombo" prefWidth="150">
                          <items>
                              <FXCollections fx:factory="observableArrayList">
                                  <String fx:value="High" />
                                  <String fx:value="Medium" />
                                  <String fx:value="Low" />
                              </FXCollections>
                          </items>
                      </ComboBox>
                      
                      <Label text="Right Panel:" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                      <ComboBox fx:id="rightTolCombo" prefWidth="150">
                          <items>
                              <FXCollections fx:factory="observableArrayList">
                                  <String fx:value="High" />
                                  <String fx:value="Medium" />
                                  <String fx:value="Low" />
                              </FXCollections>
                          </items>
                      </ComboBox>
                  </HBox>
                  
                  <HBox fx:id="TopBottomTolereanceHBox" spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="15"/>
                    </padding>
                      <Label text="Top Panel:" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                      <ComboBox fx:id="topTolCombo" prefWidth="150">
                          <items>
                              <FXCollections fx:factory="observableArrayList">
                                  <String fx:value="High" />
                                  <String fx:value="Medium" />
                                  <String fx:value="Low" />
                              </FXCollections>
                          </items>
                      </ComboBox>
                      
                      <Label text="Bottom Panel:" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                      <ComboBox fx:id="bottomTolCombo" prefWidth="150">
                          <items>
                              <FXCollections fx:factory="observableArrayList">
                                  <String fx:value="High" />
                                  <String fx:value="Medium" />
                                  <String fx:value="Low" />
                              </FXCollections>
                          </items>
                      </ComboBox>
                  </HBox>
                </VBox>

                <VBox>
                  <padding>
                      <Insets left="20" top="15"/>
                    </padding>

                  <Label text="Engraving Settings" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;">
                      <effect>
                          <DropShadow radius="2" offsetX="2" offsetY="2" color="rgba(0,0,0,0.3)"/>
                      </effect>
                  </Label>
                  <HBox fx:id="EngravingHBox" spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="15"/>
                    </padding>
                    <Label text="Engraving:" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                    <TextField fx:id="engravingField" text="" prefWidth="60"
                               style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 1, 1);"/>
                    <Label text="Font Size:" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                    <TextField fx:id="engravingSizeField" text="20" prefWidth="60"
                               style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 1, 1);"/>

                  </HBox>
                </VBox>
              </HBox>
            </VBox>

            </HBox>
            <!-- Fullscreen button (shown only in normal mode, above preview) -->
            <HBox fx:id="fullscreenBtnContainer" alignment="CENTER_LEFT">
                <Button fx:id="fullscreenBtn" text="Fullscreen SVG View" onAction="#fullscreenSVG"
                        style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0, 2, 2);"/>
            </HBox>

            <!-- SVG Preview -->
            <WebView fx:id="svgPreview" VBox.vgrow="ALWAYS"/>

            <!-- Bottom buttons -->
            <HBox fx:id="buttonHBox" spacing="10" alignment="CENTER_LEFT">
                <Button text="Back to Main Menu" onAction="#switchToPrimary"
                        style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0, 2, 2);"/>
                <Button text="Download" onAction="#downloadSVG"
                        style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0, 2, 2);"/>
                <Button fx:id="exitFullscreenBtn" text="Exit Fullscreen" onAction="#exitFullscreenSVG"
                        style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0, 2, 2);" visible="false"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>
